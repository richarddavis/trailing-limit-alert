# Copy this file to .env and fill in your actual values
# .env is already in .gitignore so your secrets won't be committed

# Pushover credentials (required for alerts)
# Get User Key: visible on https://pushover.net homepage when logged in
# Get App Token: Create an app at https://pushover.net/apps/build
PUSHOVER_APP_TOKEN=your_app_token_here
PUSHOVER_USER_KEY=your_user_key_here

# Alert thresholds (optional, defaults to 5%)
DROP_THRESHOLD_PERCENT=5
RISE_THRESHOLD_PERCENT=5

# Optional: Override API settings
# PRICE_API_URL=https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd
# ASSET=bitcoin
# CURRENCY=usd

# Testing options
# DISABLE_NOTIFICATIONS=1  # Uncomment to disable notifications during testing 